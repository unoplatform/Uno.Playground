								  Fill="{StaticResource Color05Brush}"
								  Stretch="Uniform" />
						</StackPanel>
					</HyperlinkButton>
				</Grid>
			</NavigationView.PaneFooter>

			<Frame x:Name="samplesFrame" />
		</NavigationView>

