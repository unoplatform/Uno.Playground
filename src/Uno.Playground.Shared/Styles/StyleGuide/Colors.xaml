					 Color="{ThemeResource Color08}" />
	<SolidColorBrush x:Key="Color09Brush"
					 Color="{ThemeResource Color09}" />
	<SolidColorBrush x:Key="Color10Brush"
					 Color="{ThemeResource Color10}" />
	<SolidColorBrush x:Key="Color11Brush"
